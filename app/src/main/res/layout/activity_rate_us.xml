<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RateUsActivity">

    <TextView
        android:id="@+id/rateUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/rateUsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We hope you enjoy using our app. Please take a moment to rate us on the Play Store."
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/rateUsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us"
        android:layout_gravity="center" />

</LinearLayout>
